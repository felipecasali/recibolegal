# Production Environment Variables
NODE_ENV=production
PORT=3001

# Domain Configuration
PUBLIC_URL=https://recibolegal.com.br

# Database URLs (production)
# Replace with your production Firebase credentials
FIREBASE_API_KEY=your_production_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_production_firebase_auth_domain
FIREBASE_PROJECT_ID=your_production_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_production_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_production_firebase_messaging_sender_id
FIREBASE_APP_ID=your_production_firebase_app_id

# Firebase Admin (Server-side)
FIREBASE_ADMIN_TYPE=service_account
FIREBASE_ADMIN_PROJECT_ID=your_production_firebase_project_id
FIREBASE_ADMIN_PRIVATE_KEY_ID=your_production_private_key_id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_production_private_key\n-----END PRIVATE KEY-----"
FIREBASE_ADMIN_CLIENT_EMAIL=your_production_client_email
FIREBASE_ADMIN_CLIENT_ID=your_production_client_id
FIREBASE_ADMIN_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_ADMIN_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_ADMIN_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_ADMIN_CLIENT_X509_CERT_URL=your_production_cert_url

# Stripe Configuration (production keys)
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Twilio Configuration (production)
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+your_production_whatsapp_number

# Security
SIMULATION_MODE=false

# Monitoring
SENTRY_DSN=your_sentry_dsn_if_using
